<?xml version="1.0"?>
<odoo>
    <data>

        <!-- TRAINING QUALIFICATION TYPE VIEWS -->
        <record id="training_qualification_type_view_form" model="ir.ui.view">
            <field name="name">training.qualification.type.form</field>
            <field name="model">training.qualification.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="training_qualification_type_view_tree" model="ir.ui.view">
            <field name="name">training.qualification.type.tree</field>
            <field name="model">training.qualification.type</field>
            <field name="arch" type="xml">
                <tree string="Qualification type" editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="training_qualification_type_action" model="ir.actions.act_window">
            <field name="name">Qualification type</field>
            <field name="res_model">training.qualification.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a qualification type
                </p>
            </field>
        </record>


    </data>
</odoo>
