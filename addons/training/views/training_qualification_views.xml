<?xml version="1.0"?>
<odoo>
    <data>

        <!-- TRAINING QUALIFICATION VIEWS -->
        <record id="training_qualification_view_form" model="ir.ui.view">
            <field name="name">training.qualification.form</field>
            <field name="model">training.qualification</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="description"/>
                                <field name="type"/>
                                <field name="valid_years"/>
                                <field name="category"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="training_qualification_view_tree" model="ir.ui.view">
            <field name="name">training.qualification.tree</field>
            <field name="model">training.qualification</field>
            <field name="arch" type="xml">
                <tree string="Qualification">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="valid_years"/>
                    <field name="category"/>
                </tree>
            </field>
        </record>

        <record id="training_qualification_action" model="ir.actions.act_window">
            <field name="name">Qualification</field>
            <field name="res_model">training.qualification</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a qualification
                </p>
            </field>
        </record>


    </data>
</odoo>
