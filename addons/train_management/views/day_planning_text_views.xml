<?xml version="1.0"?>
<odoo>
    <data>

        <!-- DAY PLANNING TEXT VIEWS -->
        <record id="day_planning_text_view_form" model="ir.ui.view">
            <field name="name">day.planning.text.form</field>
            <field name="model">train_management.day_planning_text</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="day_planning"/>
                                <field name="name"/>
                                <field name="text"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="day_planning_text_view_tree" model="ir.ui.view">
            <field name="name">day.planning.text.tree</field>
            <field name="model">train_management.day_planning_text</field>
            <field name="arch" type="xml">
                <tree string="Day Planning Text">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>


    </data>
</odoo>
