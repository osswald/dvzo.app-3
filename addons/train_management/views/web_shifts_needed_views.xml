<?xml version="1.0"?>
<odoo>
    <data>
        <template id="web_shifts_needed_list_view" name="My current shifts">
            <t t-call="website.layout">
		    <title>Shifts needed</title>
		    <div class="container">
                    <h1>Shifts needed</h1>
                    <br/>
		    <div class="accordion" id="accordionExample">

			<div class="accordion-item" t-foreach="needed_shifts" t-as="entry">
				<t t-set="dayplanning" t-value="entry['day_planning']"/>
                            <h2 class="accordion-header" style="background-color:#dddddd;">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse"
					t-attf-data-bs-target="#collapse{{dayplanning.id}}" aria-expanded="true" t-attf-aria-controls="collapse{{dayplanning.id}}">
				<span t-field="dayplanning.name"/> <span> - </span>
				<span t-field="dayplanning.date" t-field-options='{"format": "dd.MM.yyyy"}'/>
                                </button>
                            </h2>
			    <div t-attf-id="collapse{{dayplanning.id}}" class="accordion-collapse collapse"
                                 data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <table class="table table-striped table-responsive table-sm">
                                        <thead>
                                            <tr>
                                                <th>Nr.</th>
                                                <th>Label</th>
                                                <th>Start-End</th>
                                                <th>Availability</th>
                                            </tr>
                                        </thead>
                                        <tbody>
         				    <tr t-foreach="entry['shifts']" t-as="list_shift">
						<t t-set="shift" t-value="list_shift['shift']"/>
						<t t-set="offer" t-value="list_shift['day_planning_shift_offer']"/>
						<t t-set="offer_id" t-value="offer.id if offer != None else '\'new\''"/>
						<t t-set="offer" t-value="offer.offer if offer != None else None"/>
					    <td><span t-field="shift.shift.name"/></td>
                                                <td><span t-field="shift.shift.label"/></td>
						<td><span t-field="shift.shift.shift_start" t-options="{'widget': 'float_time'}"/> - <span t-field="shift.shift.shift_end" t-options="{'widget': 'float_time'}"/></td>
                                                <td>
                                                    <div class="btn-group" role="group"
                                                         aria-label="Basic radio toggle button group">
						    <input type="radio" class="btn-check"
							    t-attf-name="btnradio-{{shift.id}}"
							    value="no"
							    t-attf-id="btnradio-{{shift.id}}-no"
							    autocomplete="off"
							    t-att="offer == 'no'  and {'checked': ''} or {}"
							    t-attf-onclick="odoo.shift_offer_sendValueToBackend({{offer_id}}, {{shift.id}}, 'no', '');"
							    />
                                                        <label class="btn btn-outline-danger" t-attf-for="btnradio-{{shift.id}}-no">No
                                                        </label>

							<input type="radio"
								class="btn-check"
								t-attf-name="btnradio-{{shift.id}}"
								value="possible"
                                                                t-attf-id="btnradio-{{shift.id}}-possible"
								autocomplete="off"
							        t-att="offer == 'possible'  and {'checked': ''} or {}"
								t-attf-onclick="odoo.shift_offer_sendValueToBackend({{offer_id}}, {{shift.id}}, 'possible', '');"
								/>
                                                        <label class="btn btn-outline-warning" t-attf-for="btnradio-{{shift.id}}-possible">Possible
                                                        </label>

							<input type="radio"
								class="btn-check"
								t-attf-name="btnradio-{{shift.id}}"
								value="yes"
                                                                t-attf-id="btnradio-{{shift.id}}-yes"
								autocomplete="off"
							        t-att="offer == 'yes'  and {'checked': ''} or {}"
								t-attf-onclick="odoo.shift_offer_sendValueToBackend({{offer_id}}, {{shift.id}}, 'yes', '');"
								/>
                                                        <label class="btn btn-outline-success" t-attf-for="btnradio-{{shift.id}}-yes">Yes
                                                        </label>
                                                    </div>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
		    	</div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
