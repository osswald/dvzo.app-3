<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inventory_location_view_form" model="ir.ui.view">
        <field name="name">inventory.location.form</field>
        <field name="model">inventory.location</field>
        <field name="arch" type="xml">
            <form string="Inventory location">
                <group>
                    <field name="name"/>
                    <field name="active"/>
                </group>
            </form>
        </field>
    </record>

    <record id="inventory_location_view_tree" model="ir.ui.view">
        <field name="name">inventory.location.tree</field>
        <field name="model">inventory.location</field>
        <field name="arch" type="xml">
            <tree string="Inventory location" editable="bottom">
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="inventory_location_action" model="ir.actions.act_window">
        <field name="name">Inventory location</field>
        <field name="res_model">inventory.location</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
