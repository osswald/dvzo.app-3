<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="damage_view_form" model="ir.ui.view">
        <field name="name">damage.form</field>
        <field name="model">risk_management.damage</field>
        <field name="arch" type="xml">
            <form string="Damage">
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>

    <record id="damage_view_tree" model="ir.ui.view">
        <field name="name">damage.tree</field>
        <field name="model">risk_management.damage</field>
        <field name="arch" type="xml">
            <tree string="Damage" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="damage_action" model="ir.actions.act_window">
        <field name="name">Damage</field>
        <field name="res_model">risk_management.damage</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
