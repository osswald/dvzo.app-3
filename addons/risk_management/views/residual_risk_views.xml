<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="residual_risk_view_form" model="ir.ui.view">
        <field name="name">residual.risk.form</field>
        <field name="model">risk_management.residual_risk</field>
        <field name="arch" type="xml">
            <form string="Residual risk">
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>

    <record id="residual_risk_view_tree" model="ir.ui.view">
        <field name="name">residual.risk.tree</field>
        <field name="model">risk_management.residual_risk</field>
        <field name="arch" type="xml">
            <tree string="Residual risk" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="residual_risk_action" model="ir.actions.act_window">
        <field name="name">Residual risk</field>
        <field name="res_model">risk_management.residual_risk</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
