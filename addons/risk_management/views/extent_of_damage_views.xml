<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="extent_of_damage_view_form" model="ir.ui.view">
        <field name="name">extent.of.damage.form</field>
        <field name="model">risk_management.extent_of_damage</field>
        <field name="arch" type="xml">
            <form string="Extent of damage">
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>

    <record id="extent_of_damage_view_tree" model="ir.ui.view">
        <field name="name">extent.of.damage.tree</field>
        <field name="model">risk_management.extent_of_damage</field>
        <field name="arch" type="xml">
            <tree string="Extent of damage" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="extent_of_damage_action" model="ir.actions.act_window">
        <field name="name">Extent of damage</field>
        <field name="res_model">risk_management.extent_of_damage</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
