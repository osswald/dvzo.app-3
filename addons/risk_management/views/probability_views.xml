<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="probability_view_form" model="ir.ui.view">
        <field name="name">probability.form</field>
        <field name="model">risk_management.probability</field>
        <field name="arch" type="xml">
            <form string="Probability">
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>

    <record id="probability_view_tree" model="ir.ui.view">
        <field name="name">probability.tree</field>
        <field name="model">risk_management.probability</field>
        <field name="arch" type="xml">
            <tree string="Probability" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="probability_action" model="ir.actions.act_window">
        <field name="name">Probability</field>
        <field name="res_model">risk_management.probability</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
