<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="business_risk_type_view_form" model="ir.ui.view">
        <field name="name">business.risk.type.form</field>
        <field name="model">risk_management.business_risk_type</field>
        <field name="arch" type="xml">
            <form string="Business risk type">
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>

    <record id="business_risk_type_view_tree" model="ir.ui.view">
        <field name="name">business.risk.type.tree</field>
        <field name="model">risk_management.business_risk_type</field>
        <field name="arch" type="xml">
            <tree string="Business risk type" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="business_risk_type_action" model="ir.actions.act_window">
        <field name="name">Business risk type</field>
        <field name="res_model">risk_management.business_risk_type</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
