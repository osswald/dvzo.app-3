<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="asset_type_view_form" model="ir.ui.view">
        <field name="name">asset.type.form</field>
        <field name="model">risk_management.asset_type</field>
        <field name="arch" type="xml">
            <form string="Asset type">
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>

    <record id="asset_type_view_tree" model="ir.ui.view">
        <field name="name">asset.type.tree</field>
        <field name="model">risk_management.asset_type</field>
        <field name="arch" type="xml">
            <tree string="Asset type" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="asset_type_action" model="ir.actions.act_window">
        <field name="name">Asset type</field>
        <field name="res_model">risk_management.asset_type</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
