<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="department_view_form" model="ir.ui.view">
        <field name="name">department.form</field>
        <field name="model">risk_management.department</field>
        <field name="arch" type="xml">
            <form string="Department">
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>

    <record id="department_view_tree" model="ir.ui.view">
        <field name="name">department.tree</field>
        <field name="model">risk_management.department</field>
        <field name="arch" type="xml">
            <tree string="Department" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="department_action" model="ir.actions.act_window">
        <field name="name">Department</field>
        <field name="res_model">risk_management.department</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
